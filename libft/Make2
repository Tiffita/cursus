NAME = libft.a
CC = gcc
INCLUDES = -I libft.h
CFLAGS = -Wall -Wextra -Werror

# Lista de archivos fuente
SOURCES = ft_isalpha.c ft_isdigit.c ft_isalnum.c \
    ft_isascii.c ft_isprint.c ft_strlen.c ft_memset.c \
    ft_bzero.c ft_memcpy.c ft_memmove.c ft_strlcpy.c \
    ft_strlcat.c ft_toupper.c ft_tolower.c ft_strchr.c \
    ft_strrchr.c ft_strncmp.c ft_memchr.c ft_memcmp.c \
    ft_strnstr.c ft_atoi.c ft_calloc.c ft_strdup.c \
    ft_substr.c ft_strjoin.c ft_strtrim.c ft_split.c \
    ft_itoa.c ft_strmapi.c ft_striteri.c ft_putchar_fd.c \
    ft_putstr_fd.c ft_putendl_fd.c ft_putnbr_fd.c

# Lista de archivos objeto generados a partir de los archivos fuente
OBJECTS = $(SOURCES:.c=.o)

# Regla para construir el objetivo principal
all : $(NAME)

# Regla para construir la biblioteca est√°tica
$(NAME) : $(OBJECTS)
    ar rcs $(NAME) $(OBJECTS)

# Regla para compilar los archivos fuente en archivos objeto
%.o : %.c
    $(CC) -c $(CFLAGS) $(INCLUDES) $< -o $@

# Otros objetivos (bonus, clean, fclean, re)

.PHONY : clean fclean all re bonus
